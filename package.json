{
  "name": "mern-template",
  "version": "1.0.0",
  "main": "app.js",
  "license": "MIT",
  "scripts": {
    "eslint": "eslint '**/*.{js,ts,tsx}' --fix",
    "dev:server": "ts-node-dev --inspect --respawn --transpileOnly -- app.ts",
    "build:server": "tsc",
    "build:client": "cd client && yarn && yarn run build",
    "dev": "concurrently \"yarn run dev:server\" \"cd client && yarn start\"",
    "build": "yarn run build:server && yarn run build:client",
    "start": "node build/app.js"
  },
  "dependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.6",
    "@types/express": "^4.17.6",
    "@types/jsonwebtoken": "^8.3.9",
    "@types/mongoose": "^5.7.12",
    "@types/node": "^13.13.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.5.6",
    "mongoose": "^5.9.9",
    "typescript": "^3.8.3"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.1.0",
    "@typescript-eslint/parser": "^3.1.0",
    "concurrently": "^5.1.0",
    "eslint": "^7.1.0",
    "eslint-plugin-react": "^7.20.0",
    "eslint-plugin-react-hooks": "^4.0.4",
    "ts-node-dev": "^1.0.0-pre.44"
  }
}
